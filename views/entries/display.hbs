<div class="row">
  <div class="col s12 m8">
    <h3>{{entry.title}}
      <small>{{{editIcon entry.user user entry._id false}}}</small>
    </h3>
    <div class="card entry">
      <div class="card-content">
        <span class="card-title">{{formatDate entry.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
        {{{entry.body}}}
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{entry.user.displayName}}</span>
        <img
          src="{{entry.user.image}}"
          alt="User's Google profile image"
          class="circle responsive-img"
        >
      </div>
      <div class="card-action">
        <a href="/entries/user/{{entry.user._id}}" class="no-margin">
          More From {{entry.user.firstName}}
        </a>
      </div>
    </div>
  </div>
</div>