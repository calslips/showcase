<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your showcase entries!</p>
{{#if entries}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each entries}}
        <tr>
          <td>
            <a href="/entries/{{_id}}">{{title}}</a>
          </td>
          <td>
            {{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}
          </td>
          <td>
            <span class="dash-status">{{status}}</span>
          </td>
          <td>
            <a href="/entries/edit/{{_id}}" class="btn btn-float">
              <i class="fas fa-edit"></i>
            </a>
            <form action="/entries/{{_id}}" method="post" id="deleteForm">
              <input type="hidden" name="_method" value="delete">
              <button class="btn red">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>Oops, you have no entries to showcase.</p>
{{/if}}